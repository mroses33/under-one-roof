<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2 ">
      <div class="form-login">
        <h2>Log in</h2>
        <br>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, input_html: { class: "toggle" }, as: :boolean if devise_mapping.rememberable?%>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn-submit-form" %>
          </div>
          <br>
          <p id= "devise-links"> <%= render "devise/shared/links" %> </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>

